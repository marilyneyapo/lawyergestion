{% extends 'INDEX.html.twig' %}

{% block title %}Bienvenue au Cabinet SCPA-SAKHO{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Styles spécifiques à l'accueil */

        /* Structure du fond */
        .background {
            background: url('{{ asset('logo/JUSTICE.jpg') }}') no-repeat center center/cover;
            min-height: 100vh;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: fixed; /* Fixer l'image de fond */
            top: 0;
            left: 0;
            z-index: -1; /* Assurer que le contenu reste au-dessus */
        }

        /* Overlay sombre pour le contraste */
        .overlay {
            background: rgba(0, 0, 0, 0.6); /* Couche sombre */
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1; /* Au-dessus de l'image de fond */
        }

        /* Contenu centré */
        .content {
            position: relative;
            z-index: 2; /* Au-dessus de l'overlay */
            color: white;
            text-align: center;
            padding: 20px;
        }

        .content h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .content p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
        }

        .content .btn {
            padding: 0.8rem 1.5rem;
            font-size: 1rem;
            border-radius: 20px;
            margin: 0.5rem; 
        }

        /* Styles pour le header */
        header {
            z-index: 10; 
            position: relative; 
            margin: 0; 
            padding: 0; 
            border: none; 
        }

        /* Adaptation pour les petits écrans */
        @media (max-width: 768px) {
            .content h1 {
                font-size: 2rem;
            } 

            .content p {
                font-size: 1rem;
            }

            .content .btn {
                font-size: 0.9rem;
                padding: 0.6rem 1.2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    
    <!-- Arrière-plan -->
    <div class="background">
        <div class="overlay"></div>
        <div class="content">
            <h1>Bienvenue au Cabinet SYF</h1>
            <p>Expertise juridique de haut niveau à votre service.</p>
            <a href="#services" class="btn btn-dark">Nos Services</a>
            <a href="#contact" class="btn btn-outline-light">Nous Contacter</a>
        </div>
    </div>

{% endblock %}




